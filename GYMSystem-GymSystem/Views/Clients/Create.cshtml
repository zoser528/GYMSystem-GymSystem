@model GYMSystem.Models.Client

@{
    ViewData["Title"] = "Create";
}
<h1>Create</h1>

<h4>Client</h4>
<hr />
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClientName" class="control-label"></label>
                <input asp-for="ClientName" class="form-control" />
                <span asp-validation-for="ClientName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientNumber" class="control-label"></label>
                <input asp-for="ClientNumber" class="form-control" />
                <span asp-validation-for="ClientNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DOB" class="control-label"></label>
                <input asp-for="DOB" class="form-control" />
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubscriptionDate" class="control-label"></label>
                <input asp-for="SubscriptionDate" class="form-control" />
                <span asp-validation-for="SubscriptionDate" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="ClientAddress" class="control-label"></label>
                <input asp-for="ClientAddress" class="form-control" />
                <span asp-validation-for="ClientAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientEmail" class="control-label"></label>
                <input asp-for="ClientEmail" class="form-control" />
                <span asp-validation-for="ClientEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Branchid" class="control-label"></label>
                <select asp-for="Branchid" asp-items="@(new SelectList(ViewBag.Branches,"BranchId","BranchName"))" class="form-control">
                    <option value="">Select Branch</option>
                </select>
            </div>
           
            <div class="form-group">
                <label asp-for="Departmentid" class="control-label"></label>
                <select asp-for="Departmentid" asp-items="@(new SelectList(ViewBag.Departments,"DepartmentId","DepartmentName"))" class="form-control">
                    <option value=" ">Select Department</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Trainerid" class="control-label"></label>
                <select asp-for="Trainerid" asp-items="@(new SelectList(ViewBag.Trainers,"TrainerId","TrainerName"))" class="form-control">
                    <option value="Nothing">Nothing</option>
                </select>
            </div>
            
            <div class="form-group">
                <label asp-for="Subscriptionid" class="control-label"></label>
                <select asp-for="Subscriptionid" asp-items="@(new SelectList(ViewBag.Subscriptions,"SubscriptionId","SubscriptionName"))" class="form-control">
                    <option value=" ">Select Subscription</option>
                </select>
            </div>

            <div class="form-group">
                <input type="submit" asp-action="Create" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
