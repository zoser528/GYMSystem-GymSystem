@model IEnumerable<GYMSystem.Models.Branch>

@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.BranchName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BranchLocation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BranchStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WorkStart)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WorkEnd)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BranchName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BranchLocation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BranchStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkStart)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkEnd)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.BranchId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.BranchId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.BranchId">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
