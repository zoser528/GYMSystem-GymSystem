@model IEnumerable<GYMSystem.Models.Subscription>

@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SubscriptionName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SubscriptionPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SubscriptionPeriod)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SubscriptionStatus)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SubscriptionName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubscriptionPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubscriptionPeriod)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubscriptionStatus)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SubscriptionId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.SubscriptionId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.SubscriptionId">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
